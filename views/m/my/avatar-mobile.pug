extends ../mobile-layout
include ../../share/common

block meta
    style.
        .app {
            background-color: #666 !important;
        }

        #preview{
            height:100%;
            width: 100%;
            padding:35% 0 0 0;
            position:fixed;
            background-color: #666;
            top:8%;
            left:0;
            bottom: 0;
            display: none;
        }

        #preview img{
            width: 100%;
        }

        .submit-btn{
            display:none;
            position:absolute;
            top:10%;
            left:-30%;;
            z-index:50;
            height: 70%;
            line-height: 70%;
        }

        .errmsg {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            display: block;
            z-index: 999;
            background-color: rgba(1,1,1,.5);
        }

        .errmsg > div {
            display: table;
            position: relative;
            top: 40%;
            margin: 0 auto;
            color: white;
            background-color: #333;
            border-radius: 0.3rem;
            font-family: "微软雅黑", "Helvetica Neue", Helvetica, Arial, sans-serif;
            width: auto;
            font-size: 2rem;
            line-height: 3rem;
            padding: 1rem;
            text-align: center;
        }


block rightTopMenu
    .btn.sidebar-toggle
        .btn-group.pull-right(ng-controller='headImgCtrl', style='position:relative;')
            form.head-form.body(name="headForm", ng-submit="uploadImg('mobile')")
                a 上传
                input(id='choose-image', type="file", accept=".png,.gif,.jpeg,.jpg",  style='width:100%;height:100%;display:block;position:absolute;top:0;left:0;opacity:0;z-index:30;', onchange='preview(this)')
                button.submit-btn.fluid.button(type='submit',id='submitHeadUrl',disabled ,style='width: 160%;background-color: dodgerblue;color:white;') 保存

block content
    script(type="text/ng-template", id="avatar.html")
        div(ng-controller="viewAccountCtrl", style='position:relative;min-height:50px;min-height:30px;')
            .preview(style='width:100%;margin:35% 0 0 0;')
                img(style='width:100%;',ng-src='{{$root.profile.avatar}}')
            #preview
                img(style='width:100%;',ng-src='{{$root.profile.avatar}}')
            div.errmsg(ng-if="$root.profile.errorMessage", ng-cloak, ng-click="errDone()")
                div {{$root.profile.errorMessage}}
block js
    script.
        function preview(file) {
            document.getElementById('submitHeadUrl').removeAttribute('disabled');
            var prevDiv = document.getElementById('preview');
            prevDiv.style.display='block';
            if (file.files && file.files[0]) {
               var reader = new FileReader();
               reader.onload = function (evt) {
                      prevDiv.innerHTML = '<img src="' + evt.target.result + '" />';
                }
             reader.readAsDataURL(file.files[0]);
             document.getElementById('submitHeadUrl').style.display='block';
            }
        }

body
    style.
        .init {
            display: none;
        }
        html {
            font-size: medium;
        }
        body {
            margin: 0px;
        }

        .body {
            width: 100%;
            position: relative;
            margin: 0 auto;
        }

        .row {
            display: block;
            position: relative;
            width: 100%;
            margin:0;
            padding:0;
        }

        .row.blank {
            height: 1rem;
        }

        .header {
            width: 100%;
            height: 3.5rem;
            line-height: 3.5rem;
            font-size: 1.4rem;
            text-align: center;
            color: #333333;
            background-color: #f9b600;
            position: relative;
        }

        .row.word {
            box-sizing: border-box;
            border-top: 1px solid #dddddd;
            border-bottom: 1px solid #dddddd;
            min-height: 5rem;
            padding: .5em 0;
        }

        .row.word .wordname {
            display: inline-block;
            height: 2rem;
            line-height: 2rem;
            padding-left: 1rem;
            color: #333333;
            font-size: 1em;
            font-weight: bold;
        }

        .row.word .wordname > span {
            font-weight: normal;
            font-size: .8em;
            color: #666666;

        }

        .row.word .wordexplain {
            display: block;
            height: auto;
            line-height: 2rem;
            padding-left: 1rem;
            color: #333333;
            font-size: .8em;
        }

        .row.date {
            background-color: #e8e8e8;
            position: relative !important;
            height: 1.8rem;
        }

        .row.date .datedetail {
            position: absolute;
            width: 3rem;
            height: 1rem;
            font-size: 0.7rem;
            right: 2.4rem;
            bottom: 0;
            color: #666666;
        }

        .row.title {
        }

        .column {
            display: inline-block;
            width: 50%;
        }

        .title .item {
            text-align: center;
            color: #666666;
            line-height: 2.2rem;
        }

        .title .item.active {
            color: #f9b600;
        }

        .reserve-row {
            min-height: 3rem;
        }
    a(name='top')
    .header
        span 生词
    .body.init.ui.segment(ng-app="vocabularyModule", ng-controller="vocabularyCtrl", style='margin: 0; padding: 0;', ng-class='{"loading": loading}')
        .row.title
            .column.item(ng-click="checkboxClick(RADIO_TYPE.NONE)", ng-class='{"active": radioBoxType==RADIO_TYPE.NONE}') 全部
            .column.item(ng-click="checkboxClick(RADIO_TYPE.FAIL)", ng-class='{"active": radioBoxType==RADIO_TYPE.FAIL}') 不理解
        div(ng-repeat="weeklylist in vocabularyAll")
            .row.date
                .datedetail {{weeklylist.year}}.{{weeklylist.monthDay}}
            .reserve-row
                .row.word(ng-repeat="word in weeklylist.words",ng-show="radioBoxType===RADIO_TYPE.NONE||word.status === radioBoxType")
                    .wordname {{word.name}}
                        span  {{word.ipc_gb+''+word.ipc_us}}
                    .wordexplain {{word.explanation}}
        .button(style='background:#e8e8e8;text-align: center;padding:.4em;', ng-click='loadMore()') 查看更多
        .button(style='background:#e8e8e8;text-align: center;padding:.4em; margin-top: .5rem;', ng-click='toTop()') 回到顶部
        .row.blank
        .row.blank
        .row.blank
        .row.blank
    include partials/footer.pug
    include ../../js

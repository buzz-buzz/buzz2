include ../share/common

doctype html
html
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
    meta(content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport")
    + css('/css/player-layout.min.css')
    title='Buzzbuzz English'
    if saas
        base(href=saasBase)
body
    style.
        .center-row {
            display: inline-block;
            text-align: center;
        }

        body {
            margin: 0;
        }

        .containter {
            position: relative;
            height: 100vh;
            min-height: 468px;
            width: 100%;
            background-image: url(//resource.buzzbuzzenglish.com/bg_login.png?2017-03-03);
            background-size: 100% 100%;
            background-repeat: no-repeat;
        }

        .input-container {
            position: absolute;
            left: 10vw;
            width: 80vw;
            padding-bottom: 1.7vw;
            border-bottom: 1px solid #aaaaaa;
        }

        .username {
            top: 41vw;
        }

        .password {
            top: 58vw;
        }

        input {
            vertical-align: top;
            font-size: 4.5vw;
            margin-left: 6vw;
            width: 60vw;
            border: none;
            background-color: transparent;
        }

        input:focus {
            outline: none;
            background-color: transparent;
        }

        .login {
            position: absolute;
            top: 75vw;
            width: 80vw;
            left: 10vw;
        }

        button {
            font-size: 5.6vw;
            color: #333333;
            border-radius: 4px;
            background-color: #f9b600;
            height: 13.6vw;
            line-height: 13.6vw;
            border: none;
        }

        .link {
            position: absolute;
            top: 98.8vw;
            width: 80vw;
            left: 10vw;
        }

        .forget {
            position: absolute;
            left: 0;
        }

        .signup {
            position: absolute;
            right: 0;
        }

        a {
            font-size: 4.5vw;
            color: #f9b600;
            text-decoration: none;
        }


    div.containter(ng-app="signInModule", ng-controller="signInCtrl")
        form(name="signInForm", ng-controller="signInCtrl", ng-submit="signIn()")
            include ../partial/errMsg_m.pug
            .center-row.username.input-container
                img(src="/images/i_account.png")
                input(type="text", placeholder="请输入网站登陆账号/手机号", ng-model="signInData.account")
            .center-row.password.input-container
                img(src="/images/i_password.png")
                input(type="password",placeholder="请输入登陆密码", ng-model="signInData.password")
            button.login(type="submit", ng-if="!bindMobileMode") 登录
            button.login(type="submit", ng-if="bindMobileMode") 登录并绑定
        .center-row.link(ng-controller="signInParentCtrl")
            a.forget(href="/reset-password") 忘记密码？
            a.signup(ng-href="/sign-up{{queryString}}") 新用户注册
    include ../js
    +js ('/public/js/signInModule.min.js')

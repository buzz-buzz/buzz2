extends ../m/mobile-layout

block meta
    + css("/public/css/play.min.css")
    style.
        body{
            font-family: "微软雅黑", "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
         .grade-title {
             display: none;
         }

         .grade-body{
             width:100%;
             margin-bottom: 20px;
         }
        .grade-body>div>div{
            padding: 0 5%;
        }
         .grade-body>div>.title{
             padding: 0 5%;
             font-size: 1.2em;
             height:2em;
             line-height: 2em;
             font-weight: bold;
             background-color: #ddd;
         }
        .grade-body>div>.span{
            color:red;
            font-size:1.5em ;
            height:1.8em;
            line-height: 1.8em;
        }
        .grade-body>.content{
            min-height: 6em;
        }
        .grade-body>div>.detail>.detail-con{
            width: 33%;
            display: inline-block;
            text-align: center;
            font-size: 1.2em;
            height: 2em;
            line-height: 2em;
        }
        .grade-body>div>.detail>.detail-con:nth-child(1){
            text-align: left;
        }
        .progress{
            position:fixed;
            z-index: 10;
            height:44px;
            width: 100%;
            margin: 0;
            top:50px;
        }
        .progress>span{
            display: block;
            height:44px;
            position:absolute;
            top:0;
            width:100%;
            background-color:#fff;
            text-align:center;
            line-height:44px;
            font-weight: bold;
        }
        .progress>.percent{
            display: none;
        }

        .exercise-container>.exercise-body{
            width:100% !important;
        }
        .button{
            display: block !important;
        }


block js
    script.
        angular.module('mobileModule')
            .run(['$rootScope', function ($rootScope) {
                $rootScope.tabularIndex = 3;
            }])
        ;

block content
    script(type="text/ng-template", id="weekly-quiz.html")
        .item(ng-show="$root.tabularIndex===3", ng-controller="weeklyQuizCtrl")
            .weekly-grade(ng-show="weeklyStatus=='grade'",ng-cloak)
                .grade-title(style='background:#fff url(http://resource.buzzbuzzenglish.com/weekly_grade.png) no-repeat center;color:white;') 成绩单
                .grade-body
                    .course
                        .title 得分
                        .span(ng-cloak) {{grade}}
                    .content
                        .title 得分详情
                        .detail(ng-repeat="details in score")
                            .detail-title(style='font-weight:bold;',ng-cloak) {{details.type}}
                            .detail-con(ng-cloak) 共{{details.total_sum}}题
                            .detail-con(ng-cloak) 答对{{details.correct}}题
                            .detail-con(ng-cloak) 获得{{details.score}}分
                a.button(ng-click="turnTo('exercise')",ng-cloak, ng-hide="done") 继续测试
            div(ng-show="weeklyStatus=='exercise'")
                .progress
                    span(ng-cloak) {{currentIndex+1}}/{{arrayWeeklyQuiz.length}}
                .ui.container.fixed-ratio.eight-seven
                    .content
                        iframe(id="weekly-quiz-frame", frameborder="0", style="width: 100%; height: 100%;", ng-src="{{currentQuiz.quiz}}")

                .ui.horizontal.divider
                .ui.fluid.container
                    button.ui.yellow.fluid.huge.button(ng-click="nextQuiz()", ng-hide="currentIndex+1>=arrayWeeklyQuiz.length") 下一题 
                    button.ui.yellow.fluid.huge.button(ng-click="turnTo('grade')", ng-show="done") 查看成绩